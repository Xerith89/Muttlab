<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane id="BorderPane" prefHeight="400.0" prefWidth="450.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.NewMatrixSceneController">
     <top>
        <VBox alignment="center"> 
        <Text id="welcome-text" text="Add Matrix" />
        </VBox>
     </top>
    <center>
        
        <VBox alignment="center">
            
            <Label fx:id="SuccessLabel" text= "Matrix Created Successfully" visible="false" textFill="red"></Label>
           
            <Label fx:id="FailureLabel" text= "Invalid Matrix" visible="false" textFill="red" ></Label>
           
            <TextField fx:id="display" alignment="center" maxWidth="250.0" prefHeight="30.0" />
        
            <GridPane hgap="3" vgap="3" alignment="center">
				
            <Button fx:id="clearButton" prefWidth="50.0" prefHeight="40" GridPane.columnIndex="3" GridPane.rowIndex="1" text="C" >
            <tooltip><Tooltip text="Clear Input" /></tooltip></Button>
				
            <Button fx:id="sevButton" prefWidth="50.0" prefHeight="40" GridPane.columnIndex="0" GridPane.rowIndex="1" text="7"></Button>
				
            <Button fx:id="eigButton" prefWidth="50.0" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="1" text="8"></Button>
			
            <Button fx:id="ninButton" prefWidth="50.0" prefHeight="40" GridPane.columnIndex="2" GridPane.rowIndex="1" text="9"></Button>
				
            <Button fx:id="fourButton" prefWidth="50.0" prefHeight="40" GridPane.columnIndex="0" GridPane.rowIndex="2" text="4"></Button>
				
            <Button fx:id="fiveButton" prefWidth="50.0" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2" text="5"></Button>
                    
            <Button fx:id="sixButton" prefWidth="50.0" prefHeight="40" GridPane.columnIndex="2" GridPane.rowIndex="2" text="6"></Button>
				
            <Button fx:id="oneButton" prefWidth="50.0" prefHeight="40" GridPane.columnIndex="0" GridPane.rowIndex="3" text="1"></Button>
				
            <Button fx:id="twoButton" prefWidth="50.0" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="3" text="2"></Button>
				
            <Button fx:id="threeButton" prefWidth="50.0" prefHeight="40" GridPane.columnIndex="2" GridPane.rowIndex="3" text="3"></Button>
				
            <Button fx:id="zeroButton" prefWidth="50.0" prefHeight="40" GridPane.columnIndex="0" GridPane.rowIndex="4" text="0"></Button>
				
            <Button fx:id="pointButton" prefWidth="50.0" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="4" text="."></Button>
				
            <Button fx:id="newButton" prefWidth="80.0" prefHeight="40" GridPane.columnIndex="3" GridPane.rowIndex="3" text="Enter">
            <tooltip><Tooltip text="Submit Matrix" /></tooltip></Button>
				
            <Button fx:id="spaceButton" prefWidth="50.0" prefHeight="40" GridPane.columnIndex="2" GridPane.rowIndex="4" text="Spc">
            <tooltip><Tooltip text="Space" /></tooltip></Button>
				
            <Button fx:id="backButton" prefWidth="80.0" prefHeight="40" GridPane.columnIndex="3" GridPane.rowIndex="4" text="Back"></Button>
				
            <Button fx:id="lineButton" prefWidth="50.0" prefHeight="40" GridPane.columnIndex="3" GridPane.rowIndex="2" text=";">
            <tooltip><Tooltip text="Insert New Row" /></tooltip></Button>
            </GridPane>
        </VBox>
    </center>
    <stylesheets>
        <URL value="@Style.css"/>
    </stylesheets>
  </BorderPane>