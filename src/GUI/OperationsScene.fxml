<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

  <BorderPane id="BorderPane" prefHeight="400.0" prefWidth="450.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.OperationsSceneController">
     <top>
        <VBox alignment="center"> 
        <Text id="welcome-text" text="Operations" />
        </VBox>
     </top>
    <center>
        
        <HBox alignment="center" >
            <padding><Insets top="5" bottom="5" left="5"></Insets> </padding>       
            <ListView fx:id="matrices"  maxWidth="260.0" prefHeight="250.0" />
            
            <GridPane alignment="center_right">
               				
                <Button onAction="#add" prefWidth="80.0" prefHeight="40" GridPane.columnIndex="2" GridPane.rowIndex="0">+</Button>
								
                <Button onAction="#subt" prefWidth="80.0" prefHeight="40" GridPane.columnIndex="3" GridPane.rowIndex="0">-</Button>
				
                <Button onAction="#scale" prefWidth="80.0" prefHeight="40" GridPane.columnIndex="2" GridPane.rowIndex="2">* N</Button>
				
                <Button onAction="#back" fx:id="back" prefWidth="80.0" prefHeight="40" GridPane.columnIndex="3" GridPane.rowIndex="3">Back</Button>
				
                <Button onAction="#multiply" prefWidth="80.0" prefHeight="40" GridPane.columnIndex="2" GridPane.rowIndex="1">*</Button>
                
                <Button onAction="#multiplyPoint" prefWidth="80.0" prefHeight="40" GridPane.columnIndex="3" GridPane.rowIndex="1">*.</Button>
                
                <Button onAction="#dupe" prefWidth="80.0" prefHeight="40" GridPane.columnIndex="2" GridPane.rowIndex="3">Dupe</Button>
                         
                <TextField fx:id="scaler" alignment="center" maxWidth="60.0" prefHeight="30.0" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
            </GridPane>
        </HBox>
    </center>
    <stylesheets>
        <URL value="@Style.css"/>
    </stylesheets>
  </BorderPane>