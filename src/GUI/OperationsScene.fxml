<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

  <BorderPane id="BorderPane" prefHeight="400.0" prefWidth="450.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.OperationsSceneController">
     <top>
        <VBox alignment="center"> 
        <Text id="welcome-text" text="Operations" />
        </VBox>
        
     </top>
     
    <center>
       
        <HBox alignment="center" >
            <padding><Insets top="5" bottom="5" left="5"></Insets> </padding>       
                   
            <ListView fx:id="matrices"  prefWidth="260.0" prefHeight="220.0" />
                        
            <GridPane alignment="center_right">
               				
                <Button onAction="#add" prefWidth="80.0" prefHeight="40" GridPane.columnIndex="2" GridPane.rowIndex="0" text="+">
                        <tooltip>
                    <Tooltip text="Sum the Last Two Matrices Point Wise" />
                        </tooltip>
                </Button>
								
                <Button onAction="#subt" prefWidth="80.0" prefHeight="40" GridPane.columnIndex="3" GridPane.rowIndex="0" text="-">
                    <tooltip>
                        <Tooltip text="Subtract the Last Two Matrices Point Wise" />
                    </tooltip>
                </Button>
				
                <Button onAction="#scale" prefWidth="80.0" prefHeight="40" GridPane.columnIndex="2" GridPane.rowIndex="2" text="* N">
                    <tooltip>
                        <Tooltip text="Multiply the Last Matrix by a Scaler" />
                    </tooltip>
                </Button>
				
                <Button onAction="#back" fx:id="back" prefWidth="80.0" prefHeight="40" GridPane.columnIndex="3" GridPane.rowIndex="3" text="Back">                </Button>
				
                <Button onAction="#multiply" prefWidth="80.0" prefHeight="40" GridPane.columnIndex="2" GridPane.rowIndex="1" text="*">
                    <tooltip>
                        <Tooltip text="Multiply the Last Two Matrices" />
                    </tooltip>
                </Button>
                
                <Button onAction="#multiplyPoint" prefWidth="80.0" prefHeight="40" GridPane.columnIndex="3" GridPane.rowIndex="1" text="*.">
                    <tooltip>
                        <Tooltip text="Multiply the Last Two Matrices Pointwise" />
                    </tooltip>
                </Button>
                
                <Button onAction="#dupe" prefWidth="80.0" prefHeight="40" GridPane.columnIndex="2" GridPane.rowIndex="3" text="Dup">
                    <tooltip>
                        <Tooltip text="Duplicate the Last Matrix" />
                    </tooltip>
                </Button>
                         
                <TextField fx:id="scaler" alignment="center" maxWidth="60.0" prefHeight="30.0" GridPane.columnIndex="3" GridPane.rowIndex="2">
                    <tooltip>
                        <Tooltip text="Enter a Number to Scale By" />
                    </tooltip>
                </TextField>
            </GridPane>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="center" >
        <Label fx:id="SuccessLabel" text= "Operation Successful" visible="false" textFill="red"></Label>
           
        <Label fx:id="FailureLabel" text= "Missing or Incorrect Operands" visible="false" textFill="red"></Label>
    </HBox>
    </bottom>
    <stylesheets>
        <URL value="@Style.css"/>
    </stylesheets>
  </BorderPane>